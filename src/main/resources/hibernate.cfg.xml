<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
    <session-factory>

        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/pizzaria</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">admin</property>
        <property name="connection.pool_size">10</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <!-- <mapping resource="Produtos.hbm.xml"/>   -->
        <mapping class="com.example.pizzaria.Entities.Clientes"/>
        <mapping class="com.example.pizzaria.Entities.Pedidos"/>
        <mapping class="com.example.pizzaria.Entities.Pizzas"/>
        <mapping class="com.example.pizzaria.Entities.Bebidas"/>
        <mapping class="com.example.pizzaria.Entities.Sobremesas"/>
        <mapping class="com.example.pizzaria.Entities.PedidosPizzas"/>
        <mapping class="com.example.pizzaria.Entities.PedidosBebidas"/>
        <mapping class="com.example.pizzaria.Entities.PedidosSobremesas"/>
  
    </session-factory>
</hibernate-configuration>
